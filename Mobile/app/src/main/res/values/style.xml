<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->

<!-- res/values/styles.xml -->

<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_username</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="CustomCheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/darkGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
        <!-- 更改文本颜色 -->
        <item name="android:textColor">@color/darkGreen</item>
    </style>

<!--    TextInputLayout style-->
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/darkGreen</item>
        <item name="hintTextColor">@color/darkGreen</item>
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
    </style>


    <style name="MyTextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/darkGreen</item>
        <item name="hintTextColor">@color/darkGreen</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
    </style>
    <style name="AlertDialogCustomTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>




    <style name="GreenCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/darkGreen</item>
        <item name="colorControlActivated">@color/darkGreen</item>
    </style>

    <style name="MyCustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/darkGreen</item>
        <item name="hintTextColor">@color/darkGreen</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>
