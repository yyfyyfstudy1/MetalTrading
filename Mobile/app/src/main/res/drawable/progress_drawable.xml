<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (unfilled portion) -->
    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid android:color="#E0E0E0" />  <!-- Adjust color as needed -->
            <corners android:radius="5dp" />  <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Progress (filled portion) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <solid android:color="@color/darkGreen" />  <!-- Adjust color as needed -->
                <corners android:radius="5dp" />  <!-- Adjust corner radius as needed -->
            </shape>
        </clip>
    </item>
</layer-list>
